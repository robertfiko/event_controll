<Window x:Class="PingPong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPong"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid>
            <Ellipse x:Name="ellipseBall" HorizontalAlignment="Left" Height="40" Stroke="Black" VerticalAlignment="Top" Fill="Blue" Width="40" Margin="270,140,0,0"/>
            <Rectangle x:Name="rectanglePad" HorizontalAlignment="Left" Height="10" Margin="235,350,0,0" Stroke="Black" Fill="Black" VerticalAlignment="Top" Width="120"/>
        </Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Background="#FFD9BD85" Header="File">
                <MenuItem Header="New Game" Click="NewGame"/>
                <MenuItem Header="Exit" Click="Exit"/>
            </MenuItem>
        </Menu>


    </Grid>
</Window>
